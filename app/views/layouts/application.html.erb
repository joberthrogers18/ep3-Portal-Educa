<!DOCTYPE html>
<html>
  <head>
    <title>Blog</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
<p class="navbar-text pull-right">


        <% if user_signed_in? %>

          Logado como: <%= link_to current_user.username, user_path(current_user.username) %> | 
          <% if current_user.admin? %>
            <%= link_to 'Admin panel', rails_admin_path, :class => 'navbar-link' %> 
            <% end %>
          
          <%= link_to "Sair", destroy_user_session_path, method: :delete, :class => 'navbar-link'  %><% end %>

 
 <% if flash[:notice] %>
          <p class="alert"><%= flash[:notice] %></p>
 <% end %>
 <% if flash[:alert] %>
          <p class="alert"><%= flash[:alert] %></p>
 <% end %></p>
<% if user_signed_in? == false %>
<%= link_to "Sign up", new_user_registration_path, :class => 'navbar-link'  %> |
          <%= link_to "Login", new_user_session_path, :class => 'navbar-link'  %> <% end %>
    <%= yield %>
<p class="flash"><%= flash.notice %></p>
  </body>
</html>
