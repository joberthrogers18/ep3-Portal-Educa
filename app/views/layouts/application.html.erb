<!DOCTYPE html>
<html>
  <head>
    <title>Blog</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
<p class="navbar-text pull-right">
<nav class="navbar navbar-default" role="navigation">
  <div class="container-fluid">
<div class="navbar-header">
      <a class="navbar-brand" href="http://localhost:3000">Portal Educa</a>
    </div>
    <div class="nav navbar-nav navbar-right">
<% if user_signed_in? %>
<li class="round-image-50"><%= image_tag(current_user.avatar.url(:thumb)) %></li>
 <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><%= current_user.username %><span class="caret"></span></a>
          <ul class="dropdown-menu">
            <li><%= link_to 'Perfil', user_path(current_user.username) %></span></li>
            <% if current_user.admin? %>
            <li><%= link_to 'Admin panel', rails_admin_path%></span> </li>
            <% end %>
             <li> <%= link_to "Sair", destroy_user_session_path, method: :delete%></span></li>
          </ul>
        </li><% end %>
<% if user_signed_in? == false %>
     <ul class="nav navbar-nav navbar-right">
      <li><a class="nav-link" href="http://localhost:3000/d/users/sign_up"><span class="glyphicon glyphicon-user"></span> Cadastrar-se</a></li>
      <li><a href="http://localhost:3000/d/users/sign_in"><span class="glyphicon glyphicon-log-in"></span> Entrar</a></li>
    </ul>
<% end %>
    </div>
  </div>
</nav> 
 <% if flash[:notice] %>
          <p class="alert"><%= flash[:notice] %></p>
 <% end %>
 <% if flash[:alert] %>
          <p class="alert"><%= flash[:alert] %></p>
 <% end %></p>
    <%= yield %>
<p class="flash"><%= flash.notice %></p>
  </body>
</html>
