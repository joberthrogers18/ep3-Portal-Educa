
<h1>Artigos com a categoria <%= @tag.name %></h1>

<ul>
  <% @tag.articles.each do |article| %>
    <li><%= link_to article.title, article_path(article) %></li>

  <% end %>

</ul>
<%= link_to "<< Retornar", tags_path %>
<%= link_to "Excluir", tag_path(@tag), method: :delete,data: {confirm: "Realmente deseja excluir essa categoria?"}%>
