<div class="container"><div class="page-header"> 
<div class="panel-title pull-left">
             <h1>Todos os artigos</h1>
         </div>
<div class="pull-right"></br><%= link_to "Novo artigo", new_article_path, class: "new_article", :class=>"btn btn-info" %></div>

<div class="clearfix"></div>
</div></div>

<div class="container">


<% @article = Article.all %>
<table class="table  table-hover">

    <thead>
      <tr>
        <th>Artigo:</th>
        <th>Autor:</th>
        <th>Atualizado em:</th>
      </tr>
    </thead>
    <tbody>
<% @article.each do |article| %>

      <tr>
        <td> <%= link_to article.title, article_path(article),
    class: 'article_title', id: "article_#{article.id}" %></td>
    <td><%= article.autor %></td>
    <td><%= article.updated_at %></td>
      </tr>

       



<% end %>
    </tbody>
  </table>
</div>



