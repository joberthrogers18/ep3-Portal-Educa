
<h1 class=center>Todos os artigos</h1>

<br /><br />


<% if user_signed_in? %>
<p class="center"><%= link_to "Novo artigo", new_article_path, class: "new_article", :class=>"waves-effect waves-light btn" %></p>
<% end %>


<br /><br />

        <ul id="articles">

          <table>
            <thead>
              </thead>

              <tbody>
                <tr>

                  <td><% @article.each do |article| %></td>
              </tr>
                </tbody>
            <table>

            <li class="center"><font size="5">
              <%= link_to article.title, article_path(article),
            class: 'article_title', id: "article_#{article.id}" %>
            </font></li>
          <% end %>
        </ul>
