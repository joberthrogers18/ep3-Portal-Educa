<h1>Todos os artigos</h1>

<ul id="articles">
  <% @article.each do |article| %>
    <li>
      <%= link_to article.title, article_path(article),
    class: 'article_title', id: "article_#{article.id}" %>
    </li>
  <% end %>
</ul>


<p>
<% if user_signed_in? %>
<%= link_to "Novo artigo", new_article_path, class: "new_article" %>
<% end %>
</p>
